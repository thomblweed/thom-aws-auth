{
  "name": "thom-aws-auth",
  "version": "0.0.1",
  "description": "lambda functions for auth with dynamodb",
  "main": "index.js",
  "scripts": {
    "build": "node esbuild.build.js",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "clean": "scripts/clean.sh",
    "apply:aws": "npm run build && cd terraform/aws && terraform apply -auto-approve",
    "destroy:aws": "cd terraform/aws && terraform destroy -auto-approve",
    "apply:local": "npm run build && cd terraform/localstack && terraform apply -auto-approve",
    "destroy:local": "cd terraform/localstack && terraform destroy -auto-approve",
    "up": "cd terraform/docker && terraform apply -auto-approve",
    "down": "cd terraform/docker && terraform destroy -auto-approve",
    "migrate": "scripts/migrateLocalDB.sh"
  },
  "author": "Thomas Newman",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.1113.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.93",
    "@types/node": "^17.0.23",
    "c8": "^7.11.2",
    "esbuild": "^0.14.36",
    "typescript": "^4.6.3",
    "vitest": "^0.12.6"
  }
}
