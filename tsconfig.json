{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES6", "DOM"],
    "emitDeclarationOnly": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "paths": {
      "/opt/nodejs/*": ["./src/layers/nodejs/*"],
      "@middy/*": ["./src/layers/nodejs/node_modules/@middy/*"]
    }
  }
}
